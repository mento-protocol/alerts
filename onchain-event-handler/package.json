{
  "name": "onchain-event-handler",
  "version": "1.0.0",
  "description": "Routes QuickNode webhook events to Discord for Safe multisig monitoring",
  "main": "dist/index.js",
  "engines": {
    "node": "22"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "start": "NODE_ENV=development functions-framework --target=processQuicknodeWebhook",
    "prestart": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:local": "./scripts/test-local.sh",
    "health": "./scripts/test-healthcheck.sh",
    "dev": "nodemon --ext ts --ignore dist --exec \"npm run start\"",
    "deploy": "./scripts/deploy.sh",
    "logs": "./scripts/get-logs.sh",
    "logs:tail": "./scripts/tail-logs.sh",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "generate:env": "terraform -chdir=.. apply -target=module.onchain_event_handler.local_file.env_file",
    "tail": "npm run logs:tail"
  },
  "dependencies": {
    "@google-cloud/functions-framework": "^4.0.0",
    "@google-cloud/logging": "^11.2.1",
    "axios": "^1.13.2",
    "env-schema": "^7.0.0",
    "keccak": "^3.0.4",
    "viem": "^2.39.2"
  },
  "devDependencies": {
    "@types/keccak": "^3.0.5",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.10",
    "nodemon": "^3.1.11",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.10"
  },
  "overrides": {
    "js-yaml": "^4.1.1"
  }
}
